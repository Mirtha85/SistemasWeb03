<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Beth Shop</title>
    <link rel="icon" type="image/x-icon" href="~/logoBethIco.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemasWeb01.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    
    <!-- - favicon-->
   @* <link rel="shortcut icon" href="~/favicon.svg" type="image/svg+xml">*@
    <!-- - custom css link-->
    <link rel="stylesheet" href="~/assets/css/estile.css">
    <!-- - google font link-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" />


    <!--Carousel-->
    <link rel="stylesheet" href="~/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/4.5.6/css/ionicons.min.css">
    <link rel="stylesheet" href="~/assets/css/animate.css">
    <link rel="stylesheet" href="~/assets/css/carousel.css">


    <!--product card-->
    <link rel="stylesheet" href="~/css/productCard.css">

</head>
<body>
   
    <!-- - #HEADER-->

    <header class="header" data-header>
        <div class="container">

            <div class="overlay activ" data-overlay></div>

            <div class="header-search">
                <input type="search" name="search" placeholder="Search Product..." class="input-field">

                <button class="search-btn" aria-label="Search">
                    <ion-icon name="search-outline"></ion-icon>
                </button>
            </div>

            <a href="#" class="logo">
                <img src="~/assets/images/logoB150x50.png" alt="Casmart logo" max-width="50" height="31">
            </a>

            <div class="header-actions">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Logout" class="header-action-btn" style="color: #171717">
                        <ion-icon name="person-outline" aria-hidden="true"></ion-icon>

                        <p style="margin-bottom:0px;" class="header-action-label">Cerrar</p>
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="header-action-btn" style="color: #171717">
                        <ion-icon name="person-outline" aria-hidden="true"></ion-icon>
                        <p style="margin-bottom:0px;" class="header-action-label">Iniciar</p>
                    </a>
                }

                <button class="header-action-btn">
                    <ion-icon name="search-outline" aria-hidden="true"></ion-icon>

                    <p style="margin-bottom:0px;" class="header-action-label">Buscar</p>
                </button>

                <a asp-controller="Home" asp-action="ShowCart" class="header-action-btn" style="color: #171717">
                    <ion-icon name="cart-outline" aria-hidden="true"></ion-icon>

                    <p style ="margin-bottom:0px;" class="header-action-label">Carrito</p>

                    <div class="btn-badge green" aria-hidden="true"><span class="totalAmount">1</span></div>
                </a>

                <a asp-controller="Home" asp-action="Index" class="header-action-btn" style="color: #171717">
                    <ion-icon name="home-outline" aria-hidden="true"></ion-icon>
                    <p style="margin-bottom:0px;" class="header-action-label">Inicio</p>

                    @*<div class="btn-badge" aria-hidden="true">2</div>*@
                </a>

            </div>

            <button class="nav-open-btn" data-nav-open-btn aria-label="Open Menu">
                <span></span>
                <span></span>
                <span></span>
            </button>

            <nav class="navbar" data-navbar>

                <div class="navbar-top">

                    <a href="#" class="logo">
                        <img src="~/assets/images/logo130x31.png" alt="Casmart logo" width="130" height="31">
                    </a>

                    <button class="nav-close-btn" id="btn-cerrar" data-nav-close-btn aria-label="Close Menu">
                        <ion-icon name="close-outline"></ion-icon>
                    </button>

                </div>

                <ul class="navbar-list" id="lista-menu">

                    <li>
                        <a class="navbar-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="ListProducts" class="navbar-link">Productos</a>
                    </li>

                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-link">Nosotros</a>
                    </li>

                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-link">Blog</a>
                    </li>

                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-link">Contacto</a>
                    </li>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li>
                            <a class="navbar-link" asp-area="" asp-controller="Product" asp-action="Index">Adm.Productos  </a>
                        </li>
                        <li >
                            <a class="navbar-link" asp-area="" asp-controller="Category" asp-action="Index">Categorias</a>
                        </li>
                        <li>
                            <a class="navbar-link" asp-area="" asp-controller="Country" asp-action="Index">Paises</a>
                        </li>
                        <li >
                            <a class="navbar-link" asp-area="" asp-controller="Brand" asp-action="Index">Marcas</a>
                        </li>
                        <li >
                            <a class="navbar-link" asp-area="" asp-controller="Talla" asp-action="Index">Tallas</a>
                        </li>

                        <li >
                            <a class="navbar-link" asp-area="" asp-controller="User" asp-action="Index">Usuarios</a>
                        </li>
                        <li>
                            <a class="navbar-link" asp-area="" asp-controller="Order" asp-action="Index">Pedidos</a>
                        </li>
                    }

                    @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                            <a class="navbar-link" asp-area="" asp-controller="Account" asp-action="ChangeUser" >@User.Identity.Name</a>
                            </li>
                            <li>
                            <a class="navbar-link" asp-area="" asp-controller="Account" asp-action="Logout" > Cerrar Sesión</a>
                            </li>
                    }
                    else
                        {
                            <li>
                            <a class="navbar-link" asp-area="" asp-controller="Account" asp-action="Login"> Iniciar Sesión</a>
                            </li>
                    }
                </ul>

            </nav>

        </div>
    </header>





    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  

    <!-- 
    - #FOOTER
  -->

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2023 - Sistemas Web II - Wilfredo Yelma - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


    <!-- - custom js link-->
    <script src="~/assets/js/script.js"></script>
    <!--- ionicon link-->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <!--para carousel-->
    <script src="~/assets/js/owl.carousel.min.js"></script>
    <script src="~/assets/js/main.js"></script>
    

</body>
</html>
