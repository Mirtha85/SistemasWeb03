@model EditTemporalSaleViewModel
<section class="container py-5">
    @{
        ViewData["Title"] = "Edit";
    }

    <h1>Editar</h1>

    <h4>Carro de Compras</h4>
    <hr />
    <div class="row">
        <div class="col-sm-12 col-md-6">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id"/>
                <input type="hidden" asp-for="ProductSizeId" />
                <input type="hidden" asp-for="ProductId" />
               @* <input type="hidden" asp-for="ProductSizes" />*@
                
                <div class="form-group">
                    <label asp-for="ProductSizeId" class="mb-2 d-block control-label"> Selecciona una Talla</label>
                    <select asp-for="ProductSizeId" asp-items="Model.ProductSizes" class="form-select sform-control selector-talla text-start border border-secondary">
                        <option value=""> --Selecciona una talla--</option>
                    </select>
                    <span asp-validation-for="ProductSizeId" class="text-danger"></span>
                </div>
                @*<div class="form-group mb-3">
                    <label asp-for="ProductSizeId"></label>
                    <select  asp-for="ProductSizeId" asp-items="@(new SelectList(Model.ProductSizes,"Id","ShortName"))" class="form-select  form-select mb-3">
                        <option value=""> --Seleccionar SubCategoría--</option>
                    </select>
                </div>*@

                <div class="form-group">
                    <label asp-for="Remarks" class="control-label"></label>
                    <input asp-for="Remarks" class="form-control" />
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                    <a asp-action="ShowCart" class="btn btn-outline-success">Regresar</a>
                </div>
            </form>
        </div>
    </div>

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}