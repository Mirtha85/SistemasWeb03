@model Category

@{
    ViewData["Title"] = "Detalle";
}

<section class="container seccion">
    <h1>Detalle</h1>

    <div>
        <h4>Categoría</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
    </div>
    <div>
        <div class="form-group mt-5">
            <a asp-action="AddSubCategory" asp-route-id="@Model?.Id" class="btn btn-outline-primary">Agregar SubCategoría</a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-secondary">Editar</a>
            <a asp-action="Index" class="btn btn-outline-success"> Regresar</a>
        </div>
    </div>
</section>