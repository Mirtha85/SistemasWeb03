@model Category

@{
    ViewData["Title"] = "Detalle";
}

<section class="container mt-5">
    <h1>Detalle</h1>

    <div>
        <h4>Categoría @Model.Name</h4>
        <hr />
        <div class="row">
            <img src="/images/@Model.ThumbnailImage" alt="" style="max-width:200px;" />
        </div>
 
    </div>
    <div>
        <div class="form-group mt-5">
            <a asp-action="AddSubCategory" asp-route-id="@Model?.Id" class="btn btn-outline-primary">Agregar SubCategoría</a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-secondary">Editar</a>
            <a asp-action="Index" class="btn btn-outline-success"> Regresar</a>
        </div>
    </div>
</section>
<section class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Lista de subcategorías de la Categoría @Model!.Name</h4>
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped" id="MyTable">
                        <thead>
                            <tr>
                                <th>Nombre de la SubCategoría @*@Html.DisplayNameFor(model => model.Cattegories.FirstOrDefault().Name)*@</th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model.SubCategories!)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        <a asp-action="EditSubCategory" asp-route-id="@item.Id" class="btn btn-outline-warning"> <i class="bi bi-pencil"></i> Editar </a>
                                        <a asp-action="DetailsSubCategory" asp-route-id="@item.Id" class="btn btn-outline-info"> <i class="bi bi-eye"></i> Detalle </a>
                                        <a asp-action="DeleteSubCategory" asp-route-id="@item.Id" class="btn btn-outline-danger"> <i class="bi bi-trash3"></i> Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>

                </div>
            </div>

        </div>

    </div>

</section>