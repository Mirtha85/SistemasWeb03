@model SubCategory

@{
    ViewData["Title"] = "DetailsSubCategory";
}

<section class="container mt-5">
    <h1>Detalle</h1>

    <div>
        <h4>SubCategoría</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
    </div>
    <div>
        <div class="form-group mt-5">
            <a asp-action="EditSubCategory" asp-route-id="@Model?.Id" class="btn btn-outline-secondary">Editar SubCategoría</a>
            <a asp-action="Details" asp-route-id="@Model?.Category!.Id" class="btn btn-outline-success"> Regresar</a>
        </div>
    </div>
</section>
