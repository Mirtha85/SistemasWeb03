@model Picture

@{
    ViewData["Title"] = "DeleteImage";
}

<section class="container py-5">
    <h1>Eliminar</h1>
    <div class=" col-md-6">
        <img src="/images/@Model.PictureName" alt="" style="max-width:300px;" />
    </div>
    <h3>¿Estas seguro de que quieres eliminar?</h3>
    <div>
        <h4>Imagen</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PictureName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PictureName)
            </dd>
        </dl>

        <form asp-action="DeleteImage">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PictureName" />
            <input type="hidden" asp-for="ProductId" />
            <input type="submit" value="Eliminar" class="btn btn-outline-primary" />
            <a class="btn btn-outline-success" asp-action="Index"> Regresar</a>
        </form>
    </div>

</section>
