@model ProductSizeViewModel

@{
    ViewData["Title"] = "EditTalla";
}

<section class="container mt-5">
    <h1>Editar Talla</h1>

    <h4>del producto</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="EditTalla" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" asp-for="Tallas" />
                <div class="form-group mb-4">
                    <label asp-for="TallaId" class="control-label"></label>
                    <select asp-for="TallaId" asp-items="@(new SelectList(Model.Tallas,"Id","ShortName"))" class="form-select">
                        <option value=""> --Seleccinar Talla--</option>
                    </select>
                    <span asp-validation-for="TallaId" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                    <a asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-outline-success">Regresar</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}