@model City

@{
    ViewData["Title"] = "DetailsCity";
}

<section class="container">
    <h1>Detalle de @Model.Name</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
    </div>
    <div>
        <div class="form-group mt-5">
            <a asp-action="EditCity" asp-route-id="@Model?.Id" class="btn btn-outline-secondary">Editar </a>
            <a asp-action="DetailsState" asp-route-id="@Model?.State.Id" class="btn btn-outline-success"> Regresar</a>
        </div>
    </div>
</section>

