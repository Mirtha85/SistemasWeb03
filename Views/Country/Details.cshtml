@model Country

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<section class="container">
    <h1>Detalle de @Model.Name</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Nombre de país
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StatesNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StatesNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CitiesNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CitiesNumber)
            </dd>
        </dl>
    </div>
    <div>
        <div class="form-group mt-5">
            <a asp-action="AddState" asp-route-id="@Model?.Id" class="btn btn-outline-primary">Agregar Departamento</a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-secondary">Editar</a>
            <a asp-action="Index" class="btn btn-outline-success"> Regresar</a>
        </div>
    </div>
</section>

<hr />
<section class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Lista de departamentos de @Model!.Name</h4>
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped" id="StatesTable">
                        <thead>
                            <tr>
                                <th>Nombre del Departamento</th>
                                <th>Ciudades</th>
                                <th></th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model.States!)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CitiesNumber)
                                    </td>
                                    <td>
                                        <a asp-action="EditState" asp-route-id="@item.Id" class="btn btn-outline-warning"> <i class="bi bi-pencil"></i> Editar </a>
                                        <a asp-action="DetailsState" asp-route-id="@item.Id" class="btn btn-outline-info"><i class="bi bi-eye"></i> Detalle </a>
                                        <a asp-action="DeleteState" asp-route-id="@item.Id" class="btn btn-outline-danger"> <i class="bi bi-trash3"></i> Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>

                </div>
            </div>

        </div>

    </div>

</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#StatesTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [ 10, 25, 50, 100, 200, -1],
                    [ 10, 25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
}